<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:tx="http://www.springframework.org/schema/tx"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd 
            http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd 
            http://www.springframework.org/schema/tx http://www.springframework.org/schema/tx/spring-tx-3.0.xsd">
    
    <context:component-scan base-package="com.eidetech.servitec" />
    <context:annotation-config/>
    <context:spring-configured/>
    
    <bean class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
        <property name="location">
            <value>/WEB-INF/properties/database_postgresql.properties</value>
        </property>
    </bean>
    
    <!-- Data Source Declaration -->
    <bean id="DataSource" class="com.mchange.v2.c3p0.ComboPooledDataSource">
        <property name="driverClass" value="${jdbc.driverClassName}" />
        <property name="jdbcUrl" value="${jdbc.url}" />
        <property name="user" value="${jdbc.username}" />
        <property name="password" value="${jdbc.password}" />
        <property name="maxPoolSize" value="2" />
        <property name="maxStatements" value="0" />
        <property name="minPoolSize" value="1" />
    </bean>
 
    <!-- Session Factory Declaration -->
    <bean id="SessionFactory" class="org.springframework.orm.hibernate4.LocalSessionFactoryBean">
        <property name="dataSource" ref="DataSource" />
        <property name="annotatedClasses">
            <list>
                <value>com.eidetech.servitec.model.domain.entity.Archivo</value>
                <value>com.eidetech.servitec.model.domain.entity.Categoria</value>
                <value>com.eidetech.servitec.model.domain.entity.Cliente</value>
                <value>com.eidetech.servitec.model.domain.entity.Comprobante</value>
                <value>com.eidetech.servitec.model.domain.entity.ComprobanteDetalle</value>
                <value>com.eidetech.servitec.model.domain.entity.ConfiguracionMenu</value>
                <value>com.eidetech.servitec.model.domain.entity.ConfiguracionPermiso</value>
                <value>com.eidetech.servitec.model.domain.entity.ConfiguracionPermisoCliente</value>
                <value>com.eidetech.servitec.model.domain.entity.ConfiguracionSubmenu</value>
                <value>com.eidetech.servitec.model.domain.entity.Empresa</value>
                <value>com.eidetech.servitec.model.domain.entity.HistorialProductoCliente</value>
                <value>com.eidetech.servitec.model.domain.entity.Menu</value>
                <value>com.eidetech.servitec.model.domain.entity.NotaCredito</value>
                <value>com.eidetech.servitec.model.domain.entity.Permiso</value>
                <value>com.eidetech.servitec.model.domain.entity.PermisoCliente</value>
                <value>com.eidetech.servitec.model.domain.entity.Persona</value>
                <value>com.eidetech.servitec.model.domain.entity.Personal</value>
                <value>com.eidetech.servitec.model.domain.entity.Producto</value>
                <value>com.eidetech.servitec.model.domain.entity.ProductoCliente</value>
                <value>com.eidetech.servitec.model.domain.entity.Reservacion</value>
                <value>com.eidetech.servitec.model.domain.entity.Sede</value>
                <value>com.eidetech.servitec.model.domain.entity.Serie</value>
                <value>com.eidetech.servitec.model.domain.entity.SeriePK</value>
                <value>com.eidetech.servitec.model.domain.entity.Submenu</value>
                <value>com.eidetech.servitec.model.domain.entity.TablaTipo</value>
                <value>com.eidetech.servitec.model.domain.entity.Talon</value>
                <value>com.eidetech.servitec.model.domain.entity.UbigeoDepartamento</value>
                <value>com.eidetech.servitec.model.domain.entity.UbigeoDistrito</value>
                <value>com.eidetech.servitec.model.domain.entity.UbigeoProvincia</value>
                <value>com.eidetech.servitec.model.domain.entity.UsuarioCliente</value>
                <value>com.eidetech.servitec.model.domain.entity.UsuarioPersonal</value>
            </list>
        </property>
        <property name="hibernateProperties">
            <props>
                <prop key="hibernate.dialect">org.hibernate.dialect.PostgreSQL81Dialect</prop>
                <prop key="hibernate.show_sql">true</prop>
                <prop key="hibernate.format_sql">false</prop>
                <prop key="hibernate.use_sql_comments">false</prop>
            </props>
        </property>
    </bean>
 
    <!-- Enable the configuration of transactional behavior based on annotations -->
    <tx:annotation-driven transaction-manager="txManager"/>
 
    <!-- Transaction Manager is defined -->
    <bean id="txManager" class="org.springframework.orm.hibernate4.HibernateTransactionManager">
        <property name="sessionFactory" ref="SessionFactory"/>
    </bean>
 
</beans>
